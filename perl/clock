#!/bin/sh

clock=$(date '+%I')

case "$clock" in
	"00") icon="ï€— " ;;
	"01") icon="ï€— " ;;
	"02") icon="ï€— " ;;
	"03") icon="ï€— " ;;
	"04") icon="ï€— " ;;
	"05") icon="ï€— " ;;
	"06") icon="ï€— " ;;
	"07") icon="ï€— " ;;
	"08") icon="ï€— " ;;
	"09") icon="ï€— " ;;
	"10") icon="ï€— " ;;
	"11") icon="ï€— " ;;
	"12") icon="ï€— " ;;
esac

#       3) notify-send "ï³ğŸ“… Time/date module" "\- Left click to show upcoming appointments for the next three days via \`calcurse -d3\` and show the month via \`cal\`

case $BLOCK_BUTTON in
	1) notify-send "This Month" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")" && notify-send "Appointments" "$(calcurse -D ~/.config/calcurse -d3)" ;;
	2) setsid -f "$TERMINAL" -e calcurse -D ~/.config/calcurse ;;
	3) notify-send "ï„³  Time/date module  ï„³" "\- Left click to show upcoming appointments for the next three days via \`calcurse -d3\` and show the month via \`cal\`
- Middle click opens calcurse if installed" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

#date "+%Y %b %d (%a) $icon%I:%M%p" # Original (Luke's) Format
#date "+%a, %b %d $icon%I:%M:%S%p" # If you want seconds
date "+%a, %b %d  $icon %I:%M%p"
